{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build_debug",
            "command": "cmake",
            "args": [
                "--build", ".", "-j", "8"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "type": "cppbuild",
            "label": "build_release",
            "command": "cmake",
            "args": [
                "--build", ".", "--config", "Release", "-j", "8"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ],
    "version": "2.0.0"
}